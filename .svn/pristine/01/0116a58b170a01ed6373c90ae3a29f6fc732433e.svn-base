<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>企业工程师首页</title>
		<link rel="stylesheet" href="../layui/css/layui.css">
		<script src="../jquery-3.2.1.min.js"></script>
		<script src="../layui/layui.js"></script>
		<style>
			a {
				color: red;
				margin: 20px;
			}

			.top-div {
				display: flex;
				line-height: 50px;
			}

			.top-div .title {
				margin-left: 30px;
				flex: 8;
			}

			.top-div .btn {
				flex: 2;
			}
		</style>
	</head>
	<body>
		<div class="layui-row">
			<div class="layui-col-md12 top-div" style="height: 50px;background-color: #01AAED;">
				<div class="title">
					<h2>大学生校外实习实训管理系统</h2>
				</div>
				<div class="btn">
					<a href="javascript:void(0)" onclick="exit()">退出登录</a>
					<a href="javascript:void(0)" onclick="updatePwd()">修改密码</a>
				</div>
			</div>
		</div>
		<div class="layui-row">
			<div class="layui-col-md1" style="height: 700px;background-color:#009688">
				<a href="javascript:void(0)" name="btn" value="html/attendInfo.html">考勤信息记录</a><br>
				<a href="javascript:void(0)" name="btn" value="html/queryReplyScore.html">答辩成绩记录</a>
				<a href="javascript:void(0)" name="btn" value="html/warning.html">预警信息查询</a>
			</div>
			<div class="layui-col-md11">
				<iframe id="myFrame" src="html/queryReplyScore.html" frameborder="0" width="100%" height="700px"></iframe>
			</div>
		</div>
		<script src="../config.js"></script>
		<script>
			var layer, index;
			$(function() {
				layui.use('layer', function() {
					layer = layui.layer;
				})

				$("a[name='btn']").click(function() {
					$("#myFrame").attr("src", $(this).attr("value"))
				})
			})
			//修改密码
			function updatePwd() {
				index = layer.open({
					type: 2,
					btn: false,
					area: ['380px', '230px'],
					title: ['修改密码', '15px'],
					content: 'html/updatePwd.html'
				})
			}
		</script>
	</body>
</html>
